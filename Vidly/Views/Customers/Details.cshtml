@model Vidly.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Plano: @Model.MembershipType.Name</li>
    @if (@Model.Birthdate.HasValue)
    {
        <li>Data de nascimento: @Model.Birthdate.Value.ToShortDateString()</li>
    }
</ul>

