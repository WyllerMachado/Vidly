@model Vidly.Models.Movie

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>GÊNERO: @Model.Genre.Name</li>
    <li>DATA DE LANÇAMENTO: @Model.ReleaseDate.ToShortDateString()</li>
    <li>DATA DA ADIÇÃO: @Model.DateAdded.ToShortDateString()</li>
    <li>EM ESTOQUE: @Model.NumberInStock</li>
</ul>
