
@using Vidly.Models
@model Vidly.ViewModels.MoviesViewModel

@{
    ViewBag.Title = "Filmes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filmes</h2>

@if (@Model.Movies.Count == 0)
{
    <p class="text-warning">Não existe nenhum filme cadastrado ainda</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Filme</th>
        </tr>
        </thead>

        <tbody>
        @foreach (var movie in @Model.Movies)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
        </tbody>
    </table>
}